{
  "name": "@video-rental/root",
  "version": "0.0.1",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build --workspace @video-rental/domain && npm run build --workspace @video-rental/db && npm run build --workspace @video-rental/api",
    "clean": "npm run clean --workspaces && rm -rf tsconfig.tsbuildinfo",
    "dev": "npm run dev --workspace @video-rental/domain",
    "format": "prettier . --write && npm run format --workspaces",
    "format:check": "prettier . --check && npm run format:check --workspaces",
    "lint": "eslint packages && npm run lint --workspaces",
    "lint:fix": "eslint packages --fix && npm run lint:fix --workspaces",
    "test": "npm run test --workspaces",
    "test:watch": "node --test --watch --import=tsx \"packages/**/*.test.ts\"",
    "test:coverage": "node --test --experimental-test-coverage --import=tsx \"packages/**/*.test.ts\"",
    "typecheck": "tsc --build --noEmit",
    "tsp:compile": "npm run tsp:compile --workspace @video-rental/domain",
    "tsp:watch": "npm run tsp:watch --workspace @video-rental/domain",
    "docs:generate": "npm run docs:generate --workspace @video-rental/domain"
  },
  "keywords": [],
  "author": "Tiberius Silivestru <tiberius.silivestru@gmail.com>",
  "license": "MIT",
  "description": "",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@swc-node/register": "^1.10.10",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.15.21",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "neostandard": "^0.12.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
