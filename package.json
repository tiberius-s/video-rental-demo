{
  "name": "@video-rental/root",
  "version": "0.0.1",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:packages": "npm run build --workspace @video-rental/domain && npm run build --workspace @video-rental/db && npm run build --workspace @video-rental/api",
    "clean": "npm run clean --workspaces --if-present && rm -rf tsconfig.tsbuildinfo",
    "dev": "npm run dev --workspace @video-rental/domain",
    "dev:api": "npm run dev --workspace @video-rental/api",
    "dev:db": "npm run dev --workspace @video-rental/db",
    "format": "prettier . --write && npm run format --workspaces --if-present",
    "format:check": "prettier . --check && npm run format:check --workspaces --if-present",
    "lint": "eslint packages && npm run lint --workspaces --if-present",
    "lint:fix": "eslint packages --fix && npm run lint:fix --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:no-coverage": "npm run test:no-coverage --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "tsp:compile": "npm run tsp:compile --workspace @video-rental/domain",
    "tsp:watch": "npm run tsp:watch --workspace @video-rental/domain",
    "docs:generate": "npm run docs:generate --workspace @video-rental/domain",
    "start": "npm run start --workspace @video-rental/api --if-present",
    "install:all": "npm install",
    "version:sync": "npm version --workspaces",
    "workspace:validate": "node scripts/validate-workspace.js"
  },
  "keywords": [],
  "author": "Tiberius Silivestru <tiberius.silivestru@gmail.com>",
  "license": "MIT",
  "description": "",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@swc-node/register": "^1.10.10",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "neostandard": "^0.12.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
